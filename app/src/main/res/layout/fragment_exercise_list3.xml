<?xml version="1.0" encoding="utf-8"?>
<!--Author Aarni Pesonen -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_bg"

    tools:context=".ui.program.ProgramFragment">

    <ListView
        android:id="@+id/exerciseListView"
        android:layout_width="393dp"
        android:layout_height="519dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </ListView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideHoriBottomWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.92" />

    <TextView
        android:id="@+id/dateTextView"
        android:layout_width="169dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="64dp"
        android:text="TextView"
        android:textColor="#778899"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/exerciseListView"
        app:layout_constraintEnd_toStartOf="@+id/addCalendarButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/addCalendarButton"
        android:layout_width="131dp"
        android:layout_height="54dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="64dp"
        android:text="Add To Calendar"
        app:layout_constraintBottom_toTopOf="@+id/exerciseListView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>