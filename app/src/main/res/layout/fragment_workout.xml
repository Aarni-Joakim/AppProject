<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161616"

    tools:context=".ui.workout.WorkoutFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="141dp"
        android:layout_height="145dp"
        android:contentDescription="@string/workoutImageContent"
        android:src="@drawable/ic_list"
        app:layout_constraintBottom_toTopOf="@+id/textViewWorkout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/workout"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/floatingActionsMenu"
        android:layout_width="326dp"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:fab_expandDirection="up"
        app:fab_labelStyle="@style/FabLabelStyle"
        app:fab_labelsPosition="left"
        app:layout_constraintBottom_toTopOf="@+id/guideHoriBottomWorkout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideVertLeftWorkout"
        app:layout_constraintTop_toTopOf="@+id/guideHoriMiddleWorkout">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/createWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/blue_munsell"
            app:fab_icon="@drawable/ic_fab_create_workout"
            app:fab_title="Create Own Workout" />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/generateWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_colorNormal="@color/blue_munsell"
            app:fab_icon="@drawable/ic_fab_create_custom"
            app:fab_title="Create New Workout" />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideHoriBottomWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideVertLeftWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.35" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideHoriMiddleWorkout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>