<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bottomSpacerTextView"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/profileCardView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottomSpacerTextView"
        >


        <ImageView
            android:id="@+id/backgroundImageView"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:srcCompat="@drawable/gradient_background"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="23dp" />


        <ImageView
            android:id="@+id/pictureDisplayView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginVertical="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="20dp"
            android:paddingTop="60dp"
            android:paddingRight="40dp"
            android:src="@drawable/ic_profile"
            android:text="12"
            android:textSize="50sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/nextWorkoutDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="40dp"
            android:paddingBottom="45dp"
            android:text="Next Workout:"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nextWorkoutDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="40dp"
            android:paddingBottom="8dp"
            android:text="Next Workout Date"
            android:textSize="25sp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/programProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingBottom="13dp" />

        <TextView
            android:id="@+id/programNameDisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="40dp"
            android:paddingStart="45dp"
            android:paddingTop="10dp"
            android:text="Program Name"
            android:textSize="35sp"
            android:textStyle="bold" />



    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>
