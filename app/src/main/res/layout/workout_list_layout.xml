<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bottomSpacerTextView"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/profileCardView1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottomSpacerTextView"
        >






        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:srcCompat="@drawable/gradient_background"
            tools:layout_editor_absoluteX="126dp"
            tools:layout_editor_absoluteY="23dp" />

        <TextView
            android:id="@+id/programNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:text="Workout type"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/workoutDurationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="20dp"
            android:text="Workout duration"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/estimatedDurationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="0dp"
            android:paddingBottom="8dp"
            android:layout_marginRight="20dp"
            android:text="estimated workout duration"
            android:textSize="15sp"
            android:textStyle="bold" />




        <TextView
            android:id="@+id/workoutDateTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            android:paddingBottom="8dp"
            android:text="Workout Date"
            android:textSize="25sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>
