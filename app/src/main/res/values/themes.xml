<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Default" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#303134</item>
        <item name="colorPrimaryDark">@color/new_bg</item>
        <item name="colorAccent">#303134</item>
        <item name="android:navigationBarColor">@color/black</item>
        <item name="android:statusBarColor">#303134</item>
    </style>

    <style name="FabLabelStyle">
        <item name="android:background">@drawable/bg_label</item>item>
        <item name="android:textColor">#FFF</item>
